<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/black42" android:startColor="@color/black42" />
            <stroke android:width="3dp" android:color="@color/white1" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:layout_width="match_parent" android:layout_height="match_parent" android:state_focused="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/drkgray35" android:startColor="@color/drkgray36" />
            <stroke android:width="3dp" android:color="@color/black42" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/drkgray35" android:startColor="@color/drkgray36" />
            <stroke android:width="3dp" android:color="@color/black42" />
            <corners android:radius="3dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

</selector>